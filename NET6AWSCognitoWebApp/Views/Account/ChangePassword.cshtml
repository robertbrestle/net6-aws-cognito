@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-12">
        <form method="post" action="" class="form-horizontal">
            <fieldset id="content_form_name">
                <legend>Change Password</legend>
            </fieldset>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="PreviousPassword">Current Password</label>
                <div class="controls col-sm-8">
                    <input type="password" asp-for="PreviousPassword" placeholder="Current Password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="ProposedPassword">New Password</label>
                <div class="controls col-sm-8">
                    <input type="password" asp-for="ProposedPassword" placeholder="New Password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4" asp-for="ProposedPasswordVerification">New Password Again</label>
                <div class="controls col-sm-8">
                    <input type="password" asp-for="ProposedPasswordVerification" placeholder="New Password Again" class="form-control">
                </div>
            </div>

            <div asp-validation-summary="All"></div>

            <input type="submit"/>
        </form>
    </div>
</div>

@if(Model != null && Model.SuccessfulUpdate != null)
{
<div class="row">
    <div class="col-12">
        <p class="text-success display-4">Password Updated Successfully!</p>
    </div>
</div>
}
